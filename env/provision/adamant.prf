# Unison profile for syncing the "adamant" directory
# between two locations

# Set the root directories for the sync
root = /home/user/adamant
root = /share/adamant

# Set the options for the sync
silent = true
batch = true
fastcheck = true
logfile = /home/user/.unison/adamant.log
times = true
prefer = /home/user/adamant
repeat = watch+20
maxsizethreshold = 20000
sortbysize = true
